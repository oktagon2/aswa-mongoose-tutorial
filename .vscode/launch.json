{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:4280",
      "webRoot": "${workspaceFolder}/public"
    },
    {
      "name": "Attach to Chrome",
      "port": 4280,
      "request": "attach",
      "type": "pwa-chrome",
      "webRoot": "${workspaceFolder}/public"
    },
    {
      "name": "Attach to Node Functions",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "preLaunchTask": "func: host start"
    }
  ]
}
